# Stock Day Trading App Configuration
# Copy this file to .env and fill in your actual values

# Trading Platform API Keys (Optional - for direct API trading)
# ALPACA_API_KEY=your_alpaca_api_key_here
# ALPACA_SECRET_KEY=your_alpaca_secret_key_here
# ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ROBINHOOD_EMAIL=your_robinhood_email
# ROBINHOOD_PASSWORD=your_robinhood_password

# Risk Management Settings
MAX_POSITION_SIZE=1000
DAILY_LOSS_LIMIT=500
RISK_PER_TRADE=2.0
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=5.0

# Trading Schedule
TRADING_START_TIME=09:30
TRADING_END_TIME=16:00
TIMEZONE=America/New_York

# Default Watchlist
DEFAULT_SYMBOLS=AAPL,GOOGL,MSFT,TSLA,AMZN,NVDA,META,AMD,NFLX,CRM

# Chart Settings
DEFAULT_TIMEFRAME=1m
CHART_UPDATE_INTERVAL=5

# Automation Settings
AUTO_SAVE_INTERVAL=300
LOG_LEVEL=INFO